@{
    ViewBag.Title = "Contact";
}



@section Body {
    @using mvc_dz1.App_Code

    <div class="container m-5">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.TextBox("Name", null, new { @class = "form-control", placeholder = "Name" , required=""})
            </div>
            <div class="form-group">
                @Html.TextBox("Surname", null, new { @class = "form-control", placeholder = "Surname" , required=""})
            </div>
            <div class="form-group">
                <p>Укажите пол</p>
                @Html.RadioButton("gender", "male")
                <span>Мужской</span><br />
                @Html.RadioButton("gender", "female", true)
                <span>Женский</span><br />
            </div>
            <div class="form-group">
                <p>Выберите языки</p>
                @Html.CreateUl(new List<string>() { "c#", "java", "php", "python", "ruby" }, "name")
            </div>
            <input type="submit" name="Button" value="Submit" />
        }
    </div>
    <br />
    <div class="container">

    </div>


}