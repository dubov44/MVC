@model mvc_dz.WEB.Models.IndexViewModel<Review>
@using mvc_dz.DAL.Tables;
@using mvc_dz.WEB.App_Code
@using System.Web.Mvc.Html;
@{
    ViewBag.Title = "About";
}

@section Body {
    
    <div class="container mt-4">
            @using (Html.BeginForm())
            {
                    @Html.ValidationSummary()
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Model.Name, new
                   {
                       placeholder = "Name",
                       @class = "form-control",
                       required = ""
                   })
                        @*@Html.EditorFor(m => m.Model.Name)*@
                        @Html.ValidationMessageFor(m => m.Model.Name)
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Model.ReviewText, new
                   {
                       placeholder = "Text",
                       @class = "form-control",
                       required = ""
                   })
                        @*@Html.EditorFor(m => m.Model.ReviewText)*@
                        @Html.ValidationMessageFor(m => m.Model.ReviewText)
                    </div>
                    <button class="btn btn-primary" type="submit">Confirm</button>
                <br />
            }
        <div class="reviews mt-4">
            @Html.CreateReviews(Model.Posts as List<Review>)
        </div>
    </div>

    <div class="btn-group">
        @Html.PageLinks(Model.Pager, x => Url.Action("Index", new { page = x }))
    </div>
}
